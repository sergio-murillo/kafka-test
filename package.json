{
  "name": "appsocado-microservices",
  "version": "0.0.1",
  "description": "AppSocado microservices",
  "author": "Sergio Murillo",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nx build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nx serve",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "nx test",
    "docker:up": "docker-compose up -d -V --build",
    "docker:down": "docker-compose down",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "create:task": "npm run typeorm -- migration:create --config ./apps/task-microservice/src/app/typeormconfig.ts -n ",
    "migrate:up:task": "npm run typeorm -- migration:run --config ./apps/task-microservice/src/app/typeormconfig.ts",
    "migrate:down:task": "npm run typeorm -- migration:revert --config ./apps/task-microservice/src/app/typeormconfig.ts",
    "migrate:generate:task": "npm run typeorm -- migration:generate --config ./apps/task-microservice/src/app/typeormconfig.ts -n ",
    "create:user": "npm run typeorm -- migration:create --config ./apps/user-microservice/src/app/typeormconfig.ts -n ",
    "migrate:up:user": "npm run typeorm -- migration:run --config ./apps/user-microservice/src/app/typeormconfig.ts",
    "migrate:down:user": "npm run typeorm -- migration:revert --config ./apps/user-microservice/src/app/typeormconfig.ts",
    "migrate:generate:user": "npm run typeorm -- migration:generate --config ./apps/user-microservice/src/app/typeormconfig.ts -n "
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "nx": "16.0.0",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.19"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "^20.11.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3",
    "@nrwl/cli": "^15.9.7",
    "@nx/jest": "16.0.0",
    "@nx/linter": "16.0.0",
    "@nx/nest": "16.0.0",
    "@nx/node": "16.0.0",
    "@nrwl/nx-cloud": "latest",
    "@nx/workspace": "16.0.0",
    "@nx/webpack": "16.0.0",
    "@nx/js": "16.0.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
